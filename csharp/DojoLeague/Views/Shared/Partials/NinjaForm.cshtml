@model DojoLeague.Models.Ninja
@using DojoLeague.Models;
@using Microsoft.AspNetCore.Http;

<form asp-action="AddNinja" asp-controller="Ninja" method="post" id="ninja-form">
    <span asp-validation-for="Name"></span>
    <div class="input-field">
        <label asp-for="Name">Name of Ninja:</label>
        <input type="text" class="form-control validate" asp-for="Name" />
    </div>
    <span asp-validation-for="Level"></span>
    <div class="input-field">
        <label asp-for="Level">Ninja Level:</label>
        <input type="number" min="0" max="10" class="form-control validate" asp-for="Level" />
    </div>
    <span asp-validation-for="Location"></span>
    <div class="input-field">
        <label asp-for="Location">Location of Dojo:</label>
        <input type="text" class="form-control validate" asp-for="Location" />
    </div>
    <span asp-validation-for="Description"></span>
    <div class="input-field">
        <label asp-for="Description">Description (optional):</label>
        <textarea class="form-control validate" asp-for="Description"></textarea>
    </div>
    <button class="btn btn-default" type="submit" name="action">Add Ninja</button>
</form>