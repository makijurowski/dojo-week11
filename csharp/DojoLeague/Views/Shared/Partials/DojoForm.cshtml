@model DojoLeague.Models.Dojo
@using DojoLeague.Models;
@using Microsoft.AspNetCore.Http;

<form asp-action="AddDojo" asp-controller="Dojo" method="post" id="dojo-form" class="form-group">
    <span asp-validation-for="Name"></span>
    <div class="input-field">
        <label asp-for="Name">Name of Dojo:</label>
        <input type="text" class="form-control validate" asp-for="Name" />
    </div>
    <span asp-validation-for="Location"></span>
    <div class="input-field">
        <label asp-for="Location">Location of Dojo:</label>
        <input type="text" class="form-control validate" asp-for="Location" />
    </div>
    <span asp-validation-for="Information"></span>
    <div class="input-field">
        <label asp-for="Information">Information (optional):</label>
        <textarea class="form-control validate" asp-for="Information"></textarea>
    </div>
    <button class="btn btn-default" type="submit" name="action">Add Dojo</button>
</form>
