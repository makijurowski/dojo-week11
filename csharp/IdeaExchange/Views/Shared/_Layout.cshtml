<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bright Ideas @ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/materialize.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/js/materialize.min.js"></script>
</head>
<body>
    <header>
        <nav class="yellow">
            <div class="nav-wrapper" style="overflow:hidden;">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-logo black-text center"><i class="large material-icons">lightbulb_outline</i>Bright Ideas</a>
                <ul class="right">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="medium material-icons black-text">home</i></a></li>
                    @await Html.PartialAsync("Partials/_LoginPartial")
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <div class="center-align">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </main>
    <footer>
        @RenderSection("Scripts", required: false)
    </footer>
</body>
</html>