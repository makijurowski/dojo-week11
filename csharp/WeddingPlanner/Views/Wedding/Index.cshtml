@using System.Linq;
@model WeddingPlanner.Models.ViewModels.RsvpViewModel;

<div class="col s12">
    <div class="col s1"></div>
    @if(@ViewBag.current_user != null)
    {
        <div class="section">
            <h2>Welcome @ViewBag.current_user.Fname!</h2>
            <h5>Here is a list of all upcoming weddings.</h5>
        </div>
        <div class="section">
        <div class="divider"></div>
            <table class="highlight centered">
                <thead>
                    <tr>
                        <th>Wedding</th>
                        <th>Date</th>
                        <th>No. Guests</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var wedding in @ViewBag.weddings)
                    {
                        <tr>
                            <td><a href="/wedding/@wedding.WeddingId">@wedding.BrideName & @wedding.GroomName</a></td>
                            <td>@wedding.Date.ToString("MMMM dd, yyyy")</td>
                            <td>@wedding.Rsvps.Count</td>
                            <td>
                                @if (@ViewBag.current_user.UserId == @wedding.UserId)
                                {
                                    <form asp-controller="Wedding" asp-action="DeleteWedding" method="post" id="deletewedding">
                                        <input asp-for="WeddingId" value="@wedding.WeddingId" />
                                        <button type="submit" class="btn waves-effect waves-light" name="rsvp">Delete</button>                            
                                    </form>
                                } else if (@ViewBag.user_rsvps.Contains(@wedding.WeddingId) == true)
                                {
                                    <form asp-controller="Wedding" asp-action="DeleteRsvp" method="post" id="deletersvp">
                                        <input asp-for="WeddingId" value="@wedding.WeddingId" />
                                        <button type="submit" class="btn waves-effect waves-light" name="deletersvp">Un-RSVP</button>                            
                                    </form>
                                } else {
                                    <form asp-controller="Wedding" asp-action="AddRsvp" method="post" id="rsvp">
                                        <input asp-for="WeddingId" value="@wedding.WeddingId" />
                                        <button type="submit" class="btn waves-effect waves-light" name="rsvp">RSVP</button>                            
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="section right-align">
            <div class="divider"></div>
            <a asp-area="" asp-controller="Wedding" asp-action="AddWedding" title="AddWedding" class="waves-effect waves-light btn"><i class="material-icons left">add</i>Add a Wedding </a>
        </div>
    }
    @if(@ViewBag.current_user == null)
    {
        <p>Go register or login first!</p>
    }
    <div class="col s1"></div>
</div>