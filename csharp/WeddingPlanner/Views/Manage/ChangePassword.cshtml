@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row center-align">
    <div class="col s12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-field">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="validate" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="validate" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="validate" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="waves-effect waves-light btn">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
