@model SetPasswordViewModel
@{
    ViewData["Title"] = "Set password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>Set your password</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>
<div class="row">
    <div class="col m6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-field">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="validate" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="validate" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="waves-effect waves-light btn">Set password</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
