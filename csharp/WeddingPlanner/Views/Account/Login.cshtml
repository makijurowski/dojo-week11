@model LoginViewModel
@using Microsoft.AspNetCore.Identity
@using WeddingPlanner.Models.ViewModels
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "- Login";
}

<div class="row">
    <form class="col s6" asp-controller="Account" asp-action="Login" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="input-field col s6">
            <label class="active" asp-for="LEmail"></label>
            <input asp-for="LEmail" class="validate" />
            <span asp-validation-for="LEmail" class="text-danger"></span>
        </div>
        <div class="input-field col s6">
            <label class="active" asp-for="LPassword"></label>
            <input asp-for="LPassword" class="validate" />
            <span asp-validation-for="LPassword" class="text-danger"></span>
        </div>
        <div class="input-field">
            <p>
                <input type="checkbox" asp-for="RememberMe" id="RememberMe" />
                <label class="active" asp-for="RememberMe" for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
            </p>
        </div>
        <div class="input-field col s6">
            <button type="submit" class="btn waves-effect waves-light">Log in</button>
        </div>
        <div class="col s6">
            <p>
                <a asp-action="Register" asp-controller="Account">Register as a new user?</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("Partials/_ValidationScriptsPartial")
}