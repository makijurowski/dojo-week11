@using Microsoft.AspNetCore.Identity
@using WeddingPlanner.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="align-left"><i class="material-icons">person_outline</i></a></li>
    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "right" }))
    {
    @Html.AntiForgeryToken()
    <li class="logout-link"><a href="javascript:document.getElementById('logoutForm').submit()"><i class="material-icons">cancel</i></a></li>
    }
}
else
{
    <li><a asp-area="" asp-controller="Account" asp-action="Register"><i class="material-icons">person_add</i></a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Login"><i class="material-icons">beenhere</i></a></li>
}