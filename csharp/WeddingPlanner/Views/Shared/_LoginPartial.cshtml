@using Microsoft.AspNetCore.Identity
@using WeddingPlanner.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="align-left"><i class="material-icons">person_outline</i></a></li>
    <li><form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <a type="submit" name="action"><i class="material-icons">cancel</i></a>
        </form>
    </li>
}
else
{
    <li><a asp-area="" asp-controller="Account" asp-action="Register"><i class="material-icons">person add</i></a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Login"><i class="material-icons">beenhere</i></a></li>
}